@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div style="height:55px"></div>

<div class="row">
    <div id="carouselExampleInterval" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active" data-interval="10000">
                <img src="/img/slide1.jpeg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item" data-interval="2000">
                <img src="/img/slide2.jpeg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="/img/slide3.jpeg" class="d-block w-100" alt="...">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleInterval" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleInterval" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="outer mt-1">
    <h3 class="ml-3"><span class="badge badge-pill badge-warning text-white"><span class="badge-text">نوشیدنی</span></span></h3>
    <h3 class="ml-3"><span class="badge badge-pill badge-warning text-white"><span class="badge-text">مواد غذایی</span></span></h3>
    <h3 class="ml-3"><span class="badge badge-pill badge-warning text-white"><span class="badge-text">خوار و بار</span></span></h3>
    <h3 class="ml-3"><span class="badge badge-pill badge-warning text-white"><span class="badge-text">شوینده</span></span></h3>
    <h3 class="ml-3"><span class="badge badge-pill badge-warning text-white"><span class="badge-text">بهداشت و زیبایی</span></span></h3>
    <h3 class="ml-3"><span class="badge badge-pill badge-warning text-white"><span class="badge-text">ابزار و ملزومات</span></span></h3>
</div>

<div class="row mt-2">
    <img src="/img/banner1.png" class="rounded mx-auto d-block carousel-item" alt="...">
</div>

<div class="row mt-2">
    <div class="col-6"><img src="/img/banner2.png" class="rounded mx-auto d-block carousel-item" alt="..."></div>
    <div class="col-6"><img src="/img/banner3.png" class="rounded mx-auto d-block carousel-item" alt="..."></div>
</div>
