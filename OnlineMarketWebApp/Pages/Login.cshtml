                    <button type="submit" class="btn btn-primary w-50">ورود</button>
                    <div class="row justify-content-center">
                        <div class="col-6 text-center">
                            <a href="./verifyPhone">
                                <p class="pt-2 ml-1">فراموشی رمز عبور</p>
                            </a>
                            <a href="./register">
                                <p class="pt-2 mr-1">ثبت نام</p>
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

