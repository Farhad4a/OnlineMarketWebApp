@page
@model OnlineMarketWebApp.Pages.LoginModel
@{
}


<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto py-4 px-0">
            <div class="card p-0">
                <div class="card-title text-center">
                    <h5 class="mt-5">ورود به حساب کاربری</h5> <small class="para">شماره موبایل و کلمه عبور خود را وارد کنید</small>
                </div>
